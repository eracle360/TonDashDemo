<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TON App Form</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
      }

      .form-container {
        max-width: 600px;
        margin: auto;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
      }

      .step-indicator {
        font-size: 14px;
        color: #6c757d;
        margin-bottom: 20px;
      }

      .form-group {
        margin-bottom: 20px;
      }

      .form-label {
        font-weight: bold;
      }

      .form-control {
        border-radius: 10px;
        padding-left: 40px;
      }

      .icon-input {
        position: relative;
      }

      .icon-input .fa {
        position: absolute;
        top: 50%;
        left: 10px;
        transform: translateY(-50%);
        font-size: 20px;
        color: #6c757d;
      }

      .submit-review {
        background-color: #007bff;
        color: white;
        width: 100%;
      }

      .required::placeholder {
        font-style: italic;
        color: #6c757d;
      }

      .optional::placeholder {
        color: #6c757d;
      }
    </style>
  </head>

  <body>
    <header><%- include('partials/topBar') %></header>

    <div class="container" style="margin-top: 100px">
      <div class="form-container">
        <h2 class="mb-4">TON App</h2>
        <p class="step-indicator">Step 1: Main Information</p>
        <form
          action="/apps/add-user"
          method="post"
          enctype="multipart/form-data"
          onsubmit="return validateForm()"
        >
          <div class="form-group">
            <label for="appName" class="form-label">App Name</label>
            <input
              type="text"
              class="form-control"
              id="appName"
              name="appName"
              placeholder="Enter your application name"
              required
            />
          </div>
          <div class="form-group">
            <label for="caption" class="form-label">Caption</label>
            <input
              type="text"
              class="form-control"
              id="caption"
              name="caption"
              placeholder="Enter a short app description"
              required
            />
          </div>
          <div class="form-group">
            <label for="languages" class="form-label">Languages</label>
            <input
              type="text"
              class="form-control"
              id="languages"
              name="languages"
              placeholder="Enter languages"
              required
            />
          </div>
          <div class="form-group">
            <label for="description" class="form-label">Description</label>
            <textarea
              class="form-control"
              id="description"
              name="description"
              rows="3"
              placeholder="Enter a description for your application"
              required
            ></textarea>
          </div>
          <div class="form-group">
            <label for="website" class="form-label">Website</label>
            <div class="icon-input">
              <i class="fas fa-globe"></i>
              <input
                type="url"
                class="form-control"
                id="website"
                name="website"
                placeholder="https://website.com/"
                required
              />
            </div>
          </div>
          <div class="form-group">
            <label for="telegram" class="form-label">Telegram Channel</label>
            <div class="icon-input">
              <i class="fab fa-telegram-plane"></i>
              <input
                type="url"
                class="form-control"
                id="telegramChannel"
                name="telegramChannel"
                placeholder="t.me/channel"
                required
              />
            </div>
          </div>
          <div class="form-group">
            <label for="telegramBot" class="form-label"
              >Telegram Bot (Optional)</label
            >
            <div class="icon-input">
              <i class="fab fa-telegram-plane"></i>
              <input
                type="url"
                class="form-control"
                id="telegramBot"
                name="telegramBot"
                placeholder="t.me/bot"
              />
            </div>
          </div>
          <div class="form-group">
            <label for="telegramChat" class="form-label"
              >Telegram Chat (Optional)</label
            >
            <div class="icon-input">
              <i class="fab fa-telegram-plane"></i>
              <input
                type="url"
                class="form-control"
                id="telegramChat"
                name="telegramChat"
                placeholder="t.me/chat"
              />
            </div>
          </div>
          <div class="form-group">
            <label for="appStore" class="form-label"
              >App Store (Optional)</label
            >
            <div class="icon-input">
              <i class="fab fa-apple"></i>
              <input
                type="url"
                class="form-control"
                id="appStore"
                name="appStore"
                placeholder="apps.apple.com/"
              />
            </div>
          </div>
          <div class="form-group">
            <label for="googlePlay" class="form-label"
              >Google Play (Optional)</label
            >
            <div class="icon-input">
              <i class="fab fa-google-play"></i>
              <input
                type="url"
                class="form-control"
                id="googlePlay"
                name="googlePlay"
                placeholder="play.google.com/"
              />
            </div>
          </div>
          <div class="form-group">
            <label for="github" class="form-label">Github (Optional)</label>
            <div class="icon-input">
              <i class="fab fa-github"></i>
              <input
                type="url"
                class="form-control"
                id="github"
                name="github"
                placeholder="github.com/"
              />
            </div>
          </div>
          <p class="step-indicator">Step 2: Visuals</p>
          <div class="form-group">
            <label class="form-label">Upload an icon</label>
            <div class="icon-input">
              <i class="fas fa-upload"></i>
              <input
                type="file"
                class="form-control"
                id="uploadIcon"
                name="uploadIcon"
                accept="image/jpeg, image/png"
                required
              />
            </div>
          </div>
          <div class="form-group">
            <label class="form-label">Screenshots (Minimum 2, Maximum 4)</label>
            <div class="icon-input">
              <i class="fas fa-upload"></i>
              <input
                type="file"
                class="form-control required"
                id="uploadScreenshot1"
                name="screenshots"
                accept="image/jpeg, image/png"
                required
              />
            </div>
            <div class="icon-input mt-2">
              <i class="fas fa-upload"></i>
              <input
                type="file"
                class="form-control required"
                id="uploadScreenshot2"
                name="screenshots"
                accept="image/jpeg, image/png"
                required
              />
            </div>
            <div class="icon-input mt-2">
              <i class="fas fa-upload"></i>
              <input
                type="file"
                class="form-control optional"
                id="uploadScreenshot3"
                name="screenshots"
                accept="image/jpeg, image/png"
              />
            </div>
            <div class="icon-input mt-2">
              <i class="fas fa-upload"></i>
              <input
                type="file"
                class="form-control optional"
                id="uploadScreenshot4"
                name="screenshots"
                accept="image/jpeg, image/png"
              />
            </div>
          </div>
          <div class="form-group">
            <label class="form-label"
              >Upload a video (Optional, Max 50MB)</label
            >
            <div class="icon-input">
              <i class="fas fa-upload"></i>
              <input
                type="file"
                class="form-control optional"
                id="uploadVideo"
                name="uploadVideo"
                accept="video/mp4, video/avi"
              />
            </div>
          </div>
          <button type="submit" class="btn submit-review">
            Submit for review
          </button>
        </form>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <script>
      function validateForm() {
        const form = document.querySelector("form");
        const requiredFields = form.querySelectorAll(".required");
        for (const field of requiredFields) {
          if (!field.value) {
            alert("Please fill all the required fields.");
            return false;
          }
        }
        return true;
      }
    </script>
  </body>
</html>
